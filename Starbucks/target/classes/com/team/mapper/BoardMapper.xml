<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
	<mapper namespace="com.team.mapper.BoardMapper">
		<insert id="write">
			INSERT INTO sb_board(title, content)
			VALUES(#{title},#{content})
		</insert>
		
		<select id="list" resultType="com.team.domain.BoardDTO">
			SELECT * FROM sb_board
		</select>
		
		<select id="detail" resultType="com.team.domain.BoardDTO">
			SELECT * FROM sb_board
			WHERE bno = #{bno}
		</select>
		
		<update id="cntupdate">
			UPDATE sb_board
			SET cnt = cnt + 1
			WHERE bno=#{bno}
		</update>
		
		<update id="modify">
			UPDATE sb_board
			SET title = #{title},
				content = #{content},
				regdate = now()
			WHERE bno = #{bno}
		</update>
		
		<delete id="remove">
			DELETE
			FROM sb_board
			WHERE bno=#{bno}
		</delete>
	</mapper>